@using Domain.Models
@model List<Poll>

@{
    ViewData["Title"] = "Polls";
}

<h1 class="mb-4 text-center">Polls</h1>
<div class="text-center mt-4 mb-4">
    <a asp-controller="Poll" asp-action="Create" class="btn btn-success">Create Poll</a>
</div>


@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var poll in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@poll.Title</h5>
                        <p class="text-muted"><strong>Poll ID:</strong> @poll.PollId</p>
                        <p class="text-muted"><strong>Created At:</strong> @poll.CreatedAt</p>

                        <div class="poll-options">
                            <p><strong>@poll.Option1Text:</strong> @poll.Option1VotesCount votes</p>
                            <p><strong>@poll.Option2Text:</strong> @poll.Option2VotesCount votes</p>
                            <p><strong>@poll.Option3Text:</strong> @poll.Option3VotesCount votes</p>   
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Poll" asp-action="Vote" asp-route-polID="@poll.PollId" class="btn btn-primary mt-2">Vote</a>


                            <a asp-controller="Poll" asp-action="Update" asp-route-id="@poll.PollId" class="btn btn-success mt-2">Update</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No polls available.</p>
}
